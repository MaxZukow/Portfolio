<% @title = t(:title_kolb) %>
        
<!-- PAGEBODY -->
<section id="page-body">

    <div class="wrapper-small project-space">
    
        <h4 class="align-center"><strong><%= t(:kolb_title) %></strong></h4>
        <h6 class="alttitle align-center"><%= t(:kolb_note) %></h6>
        
        <div class="column-section clearfix">
            <div class="column one-half">
                <p><%= t(:kolb_text) %></p>
            </div>
            <div class="column one-half last-col">
                <p>
                    <strong><%= t(:year) %></strong> 2014
                    <br />
                    <strong><%= t(:client) %></strong> <%= t(:kolb) %> 
                    <br />
                    <strong><%= t(:agency) %></strong> &mdash;
                    <br />
                    <br />
                    <a href="https://maxzhukow.github.io/kolb/"><%= t(:view_the_project) %></a>
                </p>
            </div>
        </div>
                    
    </div>
            
    <div class="wrapper">
        <div class="project-img">
            <%= image_tag 'projects/kolb-1.jpg', :alt => '' %>
        </div>
        <div class="project-img">
            <%= image_tag 'projects/kolb-3.jpg', :alt => '' %>
        </div>
        <div class="project-img">
            <%= image_tag 'projects/kolb-2.jpg', :alt => '' %>
        </div> 
        <div class="project-img">
            <%= image_tag 'projects/kolb-4.jpg', :alt => '' %>
        </div> 
        <div class="project-img">
            <%= image_tag 'projects/kolb-5.jpg', :alt => '' %>
        </div> 
    </div> <!-- END .wrapper -->
            
    <!-- Single Pagination -->
    <div class="wrapper">
        <ul class="single-pagination">
            <li class="prev">
                <% link_to '/projects/elephantbleu.html' do %>
                    <%= image_tag 'work-2.jpg', :alt => t(:prev) %>
                    <span><%= t(:previous_project) %></span>
                <% end %>
            </li>
            <li class="backtoworks"><a href="/"><%= link_to t(:back_to_works), '/' %></a></li>
            <li class="next">
                <% link_to '/projects/stumpf.html' do %>
                    <%= image_tag 'work-3.jpg', :alt => t(:next) %>
                    <span><%= t(:next_project) %></span>
                <% end %>
            </li>
        </ul>
    </div>
    <!-- Single Pagination -->       
    
    </section>
<!-- PAGEBODY -->